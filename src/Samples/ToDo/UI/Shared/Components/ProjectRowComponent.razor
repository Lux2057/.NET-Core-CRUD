@inherits UI.ComponentBase

<tr>
    <td class="project-id">
        <div class="text-truncate" title="@Model.Id">
            @Model.Id
        </div>
    </td>
    <td class="project-name">
        <div class="m-0 text-truncate" title="@State.Name">
            @State.Name
        </div>
    </td>
    <td class="project-description">
        <div class="m-0 text-truncate" title="@State.Description">
            @State.Description
        </div>
    </td>
    <td class="project-controls">
        <div class="d-flex m-0">
            <div>
                <ModalWindowComponent ModalId="@updateProjectModalId">
                    <ButtonContent>
                        <button class="btn btn-outline-warning btn-sm shadow-none"
                                @onclick="InitState"
                                role="button"
                                title="@updateProjectTitle">
                            <span class="me-1 oi oi-pencil"></span>
                        </button>
                    </ButtonContent>
                    <Title>
                        @updateProjectTitle
                    </Title>
                    <Body>
                    <div class="d-flex flex-column">
                        <div class="mb-1 p-1">
                            <label class="form-label">
                                @Localization[nameof(Resource.Name)]
                            </label>
                            <input @bind="State.Name"
                                   class="form-control"
                                   type="text"/>
                            <ValidationMessageComponent Key="@updateProjectValidationKey"
                                                        Name="r => r.Name"
                                                        TRequest="ICreateOrUpdateProjectRequest"/>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="mb-1 p-1">
                            <label class="form-label">
                                @Localization[nameof(Resource.Description)]
                            </label>
                            <input @bind="State.Description"
                                   class="form-control"
                                   type="text"/>
                            <ValidationMessageComponent Key="@updateProjectValidationKey"
                                                        Name="r => r.Description"
                                                        TRequest="ICreateOrUpdateProjectRequest"/>
                        </div>
                    </div>
                    <SummaryValidationMessageComponent Key="@updateProjectValidationKey"
                                                       TRequest="ICreateOrUpdateProjectRequest"/>
                    </Body>
                    <Footer>
                        <div class="d-flex">
                            <div class="ms-auto p-1">
                                <button class="btn btn-outline-primary btn-sm shadow-none"
                                        data-bs-placement="top"
                                        data-bs-toggle="tooltip"
                                        @onclick="Update"
                                        title="@Localization[nameof(Resource.Save)]"
                                        type="submit">
                                    <span>
                                        @Localization[nameof(Resource.Save)]
                                    </span>
                                </button>
                            </div>
                        </div>
                    </Footer>
                </ModalWindowComponent>
            </div>
            <div class="ms-2">
                <ModalWindowComponent ModalId="@deleteProjectModalId">
                    <ButtonContent>
                        <button class="btn btn-outline-danger btn-sm shadow-none"
                                role="button"
                                title="@deleteProjectTitle">
                            <span class="me-1 oi oi-trash"></span>
                        </button>
                    </ButtonContent>
                    <Title>
                        @deleteProjectTitle
                    </Title>
                    <Body>
                    <div class="d-flex flex-column">
                        <div class="mb-1 p-1">
                            @Localization[Resource.Are_you_sure_you_want_delete_this_item__]
                        </div>
                        <div class="mb-1 p-1">
                            <ValidationMessageComponent Key="@deleteProjectValidationKey"
                                                        Name="r => r.Id"
                                                        TRequest="DeleteEntityRequest"/>
                        </div>
                    </div>
                    </Body>
                    <Footer>
                        <div class="d-flex">
                            <div class="ms-auto p-1">
                                <button class="btn btn-outline-primary btn-sm shadow-none"
                                        data-bs-placement="top"
                                        data-bs-toggle="tooltip"
                                        @onclick="@DeleteProject"
                                        title="@Localization[nameof(Resource.Delete)]"
                                        type="button">
                                    @Localization[nameof(Resource.Delete)]
                                </button>
                            </div>
                        </div>
                    </Footer>
                </ModalWindowComponent>
            </div>

            <div class="ms-2">
                <button class="btn btn-outline-info btn-sm shadow-none"
                        @onclick="OpenProjectPage"
                        title="@Localization[nameof(Resource.Open)]"
                        type="button">
                    <span class="oi oi-document"></span>
                </button>
            </div>
        </div>
    </td>
</tr>