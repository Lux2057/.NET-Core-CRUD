@inherits UI.ComponentBase

<tr>
    <td class="project-id">
        <div class="text-truncate" title="@Model.Id">
            @Model.Id
        </div>
    </td>
    <td class="project-name">
        <div class="m-0 text-truncate" title="@State.Name">
            @if (isProjectEditing)
            {
                <input @bind="State.Name" class="form-control" type="text"/>
                <ValidationMessageComponent
                    Key="@updateProjectValidationKey"
                    Name="r => r.Name"
                    TRequest="@ICreateOrUpdateProjectRequest"/>
            }
            else
            {
                @State.Name
            }
        </div>
    </td>
    <td class="project-description">
        <div class="m-0 text-truncate" title="@State.Description">
            @if (isProjectEditing)
            {
                <input @bind="State.Description" class="form-control" type="text"/>
                <ValidationMessageComponent
                    Key="@updateProjectValidationKey"
                    Name="r => r.Description"
                    TRequest="@ICreateOrUpdateProjectRequest"/>
            }
            else
            {
                @State.Description
            }
        </div>
        <SummaryValidationMessageComponent Key="@updateProjectValidationKey"
                                           TRequest="@ICreateOrUpdateProjectRequest"/>
    </td>
    <td class="project-controls">
        <div class="d-flex m-0">
            <div>
                @if (isProjectEditing)
                {
                    <div class="d-flex">
                        <div>
                            <button class="btn btn-outline-success btn-sm shadow-none"
                                    @onclick="UpdateProject"
                                    title="@Localization[nameof(Resource.Save)]"
                                    type="button">
                                <span class="oi oi-check"></span>
                            </button>
                        </div>
                        <div class="ms-2">
                            <button class="btn btn-outline-secondary btn-sm shadow-none"
                                    @onclick="ToggleIsProjectEditing"
                                    title="@Localization[nameof(Resource.Cancel)]"
                                    type="button">
                                <span class="oi oi-circle-x"></span>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <button class="btn btn-outline-primary btn-sm shadow-none"
                            @onclick="ToggleIsProjectEditing"
                            title="@Localization[nameof(Resource.Edit)]"
                            type="button">
                        <span class="oi oi-pencil"></span>
                    </button>
                }
            </div>
            @if (!isProjectEditing)
            {
                <div class="ms-2">
                    <ModalWindowComponent ModalId="@deleteProjectModalId">
                        <ButtonContent>
                            <button class="btn btn-outline-danger btn-sm shadow-none"
                                    role="button"
                                    title="@deleteProjectTitle">
                                <span class="me-1 oi oi-trash"></span>
                            </button>
                        </ButtonContent>
                        <Title>
                            @deleteProjectTitle
                        </Title>
                        <Body>
                        <div class="d-flex flex-column">
                            <div class="mb-1 p-1">
                                @Localization[Resource.Are_you_sure_you_want_delete_this_item__]
                            </div>
                            <div class="mb-1 p-1">
                                <ValidationMessageComponent Key="@deleteProjectValidationKey"
                                                            Name="r => r.Id"
                                                            TRequest="DeleteEntityRequest"/>
                            </div>
                        </div>
                        </Body>
                        <Footer>
                            <div class="d-flex">
                                <div class="ms-auto p-1">
                                    <button class="btn btn-outline-primary btn-sm shadow-none"
                                            data-bs-placement="top"
                                            data-bs-toggle="tooltip"
                                            @onclick="@DeleteProject"
                                            title="@Localization[nameof(Resource.Delete)]"
                                            type="button">
                                        @Localization[nameof(Resource.Delete)]
                                    </button>
                                </div>
                            </div>
                        </Footer>
                    </ModalWindowComponent>
                </div>

                <div class="ms-2">
                    <button class="btn btn-outline-info btn-sm shadow-none"
                            @onclick="OpenProjectPage"
                            title="@Localization[nameof(Resource.Open)]"
                            type="button">
                        <span class="oi oi-document"></span>
                    </button>
                </div>
            }
        </div>
    </td>
</tr>