@inherits UI.ComponentBase

<div class="navbar navbar-dark ps-3 top-row">
    <div class="container-fluid">
        <div class="d-flex">
            <div class="p-1">
                <a class="navbar-brand" href="@(AuthState.IsAuthenticated ? UiRoutes.Projects : UiRoutes.Auth)">ToDo</a>
            </div>
            <div class="p-1 ms-2">
                <LanguageSelectorComponent />
            </div>
        </div>
        <button class="navbar-toggler" @onclick="toggleNavMenu" title="Navigation menu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@navMenuCssClass nav-scrollable" @onclick="toggleNavMenu">
    <nav class="flex-column">
        @if (AuthState?.IsAuthenticated == true)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@UiRoutes.Projects" Match="NavLinkMatch.All">
                    <span aria-hidden="true" class="oi oi-list-rich"></span> @Localization[nameof(Resource.Projects)]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@UiRoutes.DragulaTestPage">
                    <span class="oi oi-list-rich"></span> @Localization[nameof(Resource.Dragula_test)]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@UiRoutes.About">
                    <span class="oi oi-question-mark"></span> @Localization[nameof(Resource.About)]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" @onclick="signOut" role="button">
                    <span class="oi oi-account-logout"></span> @Localization[nameof(Resource.Sign_out)]
                </a>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@UiRoutes.Auth" Match="NavLinkMatch.All">
                    <span aria-hidden="true" class="oi oi-check"></span> @Localization[nameof(Resource.Authorization)]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@UiRoutes.About">
                    <span class="oi oi-question-mark"></span> @Localization[nameof(Resource.About)]
                </NavLink>
            </div>
        }
    </nav>
</div>